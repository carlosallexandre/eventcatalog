{
  "name": "@eventcatalog/core",
  "homepage": "https://github.com/event-catalog/eventcatalog",
  "repository": {
    "type": "git",
    "url": "https://github.com/event-catalog/eventcatalog.git"
  },
  "type": "module",
  "version": "2.8.1",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "eventcatalog": "bin/dist/eventcatalog.cjs"
  },
  "files": [
    "bin/dist/",
    "bin/default-files-for-collections/",
    "astro/",
    "!astro/**/__tests__/*"
  ],
  "scripts": {
    "build": "tsup",
    "changeset": "changeset",
    "dev": "cross-env PROJECT_DIR=\"examples/default\" tsup --watch --onSuccess \"npx . dev\"",
    "dev:build": "cross-env PROJECT_DIR=\"examples/default\" tsup --watch --onSuccess \"npx . build\"",
    "dev:generate": "cross-env PROJECT_DIR=\"examples/default\" tsup --watch --onSuccess \"npx . generate\"",
    "dev:preview": "cross-env PROJECT_DIR=\"examples/default\" tsup --watch --onSuccess \"npx . preview\"",
    "dev:start": "cross-env PROJECT_DIR=\"examples/default\" tsup --watch --onSuccess \"npx . start\"",
    "format": "prettier --config .prettierrc --write \"**/*.{js,jsx,ts,tsx,json,astro}\"",
    "format:diff": "prettier --config .prettierrc --list-different \"**/*.{js,jsx,ts,tsx,json,astro}\"",
    "prepublishOnly": "npm run build",
    "release": "changeset publish",
    "test": "vitest",
    "test:ci": "node ./.github/scripts/test.js",
    "test:run": "vitest run",
    "verify-build:catalog": "node ./.github/scripts/build-ci.js"
  },
  "dependencies": {
    "@parcel/watcher": "^2.4.1",
    "axios": "^1.7.7",
    "commander": "^12.1.0",
    "concurrently": "^8.2.2",
    "glob": "^10.4.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "cross-env": "^7.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^5.0.7",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5"
  },
  "workspaces": [
    "astro",
    "examples/default"
  ]
}
