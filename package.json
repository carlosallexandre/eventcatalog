{
  "name": "@eventcatalog/core",
  "homepage": "https://github.com/event-catalog/eventcatalog",
  "repository": {
    "type": "git",
    "url": "https://github.com/event-catalog/eventcatalog.git"
  },
  "type": "module",
  "version": "2.8.1",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "eventcatalog": "bin/dist/eventcatalog.cjs"
  },
  "files": [
    "bin/dist/",
    "bin/default-files-for-collections/",
    "astro/",
    "!astro/**/__tests__/*"
  ],
  "scripts": {
    "dev": "concurrently \"node bin/dist/watcher.js\" \"npm run scripts:hydrate-content && npm run dev --workspaces=astro\"",
    "dev:local": "concurrently \"node bin/dist/watcher.js\" \"npm run dev --workspaces=astro\"",
    "build:bin": "tsup",
    "prepublishOnly": "npm run build:bin",
    "test": "vitest",
    "test:ci": "node ./.github/scripts/test.js",
    "test:run": "vitest run",
    "build": "npm run scripts:hydrate-content && node bin/dist/analytics/log-build.js && npm run build --workspaces=astro",
    "build:cd": "node ./.github/scripts/build-ci.js",
    "preview": "npm run preview --workspaces=astro",
    "astro": "npm run astro --workspaces=astro",
    "scripts:hydrate-content": "node bin/dist/catalog-to-astro-content-directory.js",
    "start:catalog": "node bin/dist/start-catalog-locally.js",
    "verify-build:catalog": "rimraf astro/dist/ && npm run build:cd",
    "changeset": "changeset",
    "generate": "node bin/dist/generate.js",
    "release": "changeset publish",
    "format": "prettier --config .prettierrc --write \"**/*.{js,jsx,ts,tsx,json,astro}\"",
    "format:diff": "prettier --config .prettierrc --list-different \"**/*.{js,jsx,ts,tsx,json,astro}\""
  },
  "dependencies": {
    "@parcel/watcher": "^2.4.1",
    "axios": "^1.7.7",
    "commander": "^12.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "glob": "^10.4.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "typescript": "^5.4.5",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^5.0.7",
    "tsup": "^8.1.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5"
  },
  "workspaces": [
    "astro",
    "examples/default"
  ]
}
